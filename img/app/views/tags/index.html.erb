<!-- the following calls the name() function in the Professor model -->
<h1><%= @image.filename %>'s Tags </h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Image_ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.tag %></td>
        <td><%= tag.image_id %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_image_tag_path %> |
<%= link_to "Back to #{@image.filename}'s page", image_path(@image) %>
